{
  "name": "@hir4ta/memoria",
  "version": "0.15.4",
  "description": "Long-term memory plugin for Claude Code - automated session saving, recording technical decisions, and web dashboard",
  "keywords": [
    "claude",
    "claude-code",
    "memory",
    "sessions",
    "dashboard"
  ],
  "author": "hir4ta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hir4ta/memoria.git"
  },
  "type": "module",
  "bin": {
    "memoria": "./bin/memoria.js"
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch dashboard/server/index.ts",
    "build": "vite build && npm run build:server && npm run build:lib && npm run build:mcp",
    "build:server": "esbuild dashboard/server/index.ts --bundle --platform=node --outfile=dist/server.js --format=esm --external:fsevents",
    "build:lib": "esbuild lib/*.ts --bundle --platform=node --outdir=dist/lib --format=esm --external:fsevents",
    "build:mcp": "esbuild servers/*.ts --bundle --platform=node --outdir=dist/servers --format=esm --external:fsevents",
    "preview": "npm run build && node dist/server.js",
    "lint": "biome check .",
    "format": "biome format . --write",
    "lint:fix": "biome check . --write",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@hono/node-server": "^1.13.7",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.0.7",
    "@tanstack/react-query": "^5.90.20",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "esbuild": "^0.24.2",
    "hono": "^4.6.16",
    "i18next": "^25.8.0",
    "lucide-react": "^0.563.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-force-graph-2d": "^1.29.0",
    "react-i18next": "^16.5.4",
    "react-markdown": "^10.1.0",
    "react-router": "^7.1.3",
    "recharts": "^3.7.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vite": "^6.0.7",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  },
  "volta": {
    "node": "24.12.0"
  }
}
