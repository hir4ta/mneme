{
  "name": "@hir4ta/memoria",
  "version": "0.4.0",
  "description": "Claude Code の長期記憶プラグイン - セッション自動保存、技術的な判断の記録、Webダッシュボード",
  "keywords": [
    "claude",
    "claude-code",
    "memory",
    "sessions",
    "dashboard"
  ],
  "author": "hir4ta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hir4ta/memoria.git"
  },
  "type": "module",
  "bin": {
    "memoria": "./bin/memoria.js"
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch dashboard/server/index.ts",
    "build": "vite build && npm run build:server",
    "build:server": "esbuild dashboard/server/index.ts --bundle --platform=node --outfile=dist/server.js --format=esm --external:fsevents",
    "preview": "npm run build && node dist/server.js",
    "lint": "biome check .",
    "format": "biome format . --write",
    "lint:fix": "biome check . --write"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.6.16",
    "lucide-react": "^0.563.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.1.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@tailwindcss/vite": "^4.0.7",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.4",
    "esbuild": "^0.24.2",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vite": "^6.0.7"
  },
  "volta": {
    "node": "24.12.0"
  }
}
